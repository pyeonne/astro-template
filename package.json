{
  "name": "astro-template",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "commit": "cz",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "lint": "bunx eslint --fix --ext .js,.ts,.tsx,.astro . & bunx prettier --write ."
  },
  "dependencies": {
    "astro": "^4.11.5",
    "@astrojs/check": "^0.7.0",
    "typescript": "^5.5.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/format": "^19.3.0",
    "@commitlint/prompt-cli": "^19.3.1",
    "conventional-changelog-atom": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "prettier-plugin-astro": "^0.14.0",
    "prettier-plugin-tailwindcss": "^0.6.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,astro}": [
      "bun lint"
    ]
  }
}
