---
interface Props {
  body: string;
  href: string;
  title: string;
}

const { body, href, title } = Astro.props;
---

<li class="link-card">
  <a href={href}>
    <h2>
      {title}
      <span>&rarr;</span>
    </h2>
    <p>
      {body}
    </p>
  </a>
</li>
<style>
  .link-card {
    display: flex;
    padding: 0.063rem;
    border-radius: 7px;
    background-color: hsl(222deg 13% 16%);
    background-image: none;
    background-position: 100%;
    background-size: 400%;
    box-shadow: inset 0 0 0 1px hsl(0deg 0% 100% / 10%);
    list-style: none;
    transition: background-position 600ms cubic-bezier(0.22, 1, 0.36, 1);
  }

  .link-card > a {
    width: 100%;
    padding: calc(1.5rem - 0.063rem);
    border-radius: 8px;
    background-color: hsl(222deg 13% 16%);
    color: hsl(0deg 0% 100%);
    line-height: 1.4;
    opacity: 0.8;
    text-decoration: none;
  }

  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }

  .link-card:is(:hover, :focus-within) {
    background-image: var(--accent-gradient);
    background-position: 0;
  }

  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
</style>
